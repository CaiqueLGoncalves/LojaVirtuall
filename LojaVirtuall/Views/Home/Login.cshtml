@{
    ViewBag.Title = "Login";
}

<h2 class="center-block text-center">Entre no Sistema</h2>
<hr />

<div class="container">
    <div>
        <form id="form-login" name="form-login" class="form-horizontal" method="get" action="javascript:function()">
            <div class="form-group">
                <label id="status" class="alert"></label>
            </div>
            
            <div class="form-group">
                <label class="control-label col-sm-2" for="txtLogin">Login</label>
                <div class="col-sm-10">
                    <input type="text" id="txtLogin" name="txtLogin" class="form-control" required="required" maxlength="32" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="txtSenha">Senha</label>
                <div class="col-sm-10">
                    <input type="password" id="txtSenha" name="txtSenha" class="form-control" required="required" maxlength="32" />
                </div>
            </div>

            <div class="form-group center-block">
                <a id="botao-entrar" class="btn btn-primary center-block">Entrar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/Scripts/Autenticacao.js")"></script>
}