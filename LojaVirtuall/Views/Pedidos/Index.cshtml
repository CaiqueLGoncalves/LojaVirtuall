@model IEnumerable<LojaVirtuall.Models.Pedido>

@{
    ViewBag.Title = "Pedidos";
}

<h2 class="center-block text-center">Pedidos</h2>
<hr />

<table id="tbPedidos" class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataPedido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                Quantidade de Itens
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DataPedido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Itens.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                    @(item.Ativo ? "OK" : "Cancelado")
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.PedidoID }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.PedidoID }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Excluir", "Delete", new { id = item.PedidoID }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section styles {
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#tbPedidos").DataTable({
                language: {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json"
                },
                responsive: true,
                columns: [
                    { responsivePriority: 0 },
                    { responsivePriority: 1 },
                    { responsivePriority: 3 },
                    { responsivePriority: 4 },
                    { responsivePriority: 2 }
                ],
                columnDefs: [
                    { orderable: false, targets: [4] }
                ],
            });
        });
    </script>
}