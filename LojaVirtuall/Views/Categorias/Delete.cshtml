@model LojaVirtuall.Models.Categoria

@{
    ViewBag.Title = "Excluir Categoria";
}

<h2 class="center-block text-center">Excluir Categoria</h2>
<hr />

<h3 class="pergunta-exclusao">Você tem certeza que deseja excluir esta categoria?</h3>
<div>   
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CriadoEm)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CriadoEm)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModificadoEm)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModificadoEm)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CriadoPor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CriadoPor.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModificadoPor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModificadoPor.Nome)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-default" />
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>